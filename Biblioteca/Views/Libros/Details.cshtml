@model BibliotecaMVC.Models.Libro

@{
    ViewData["Title"] = "Detalles del Libro";
}

<h2>Detalles del Libro</h2>

<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Autor</dd>

        <dt class="col-sm-2">Año de Publicación</dt>
        <dd class="col-sm-10">@Model.AnioPublicacion</dd>

        <dt class="col-sm-2">Género</dt>
        <dd class="col-sm-10">@Model.Genero</dd>

        <dt class="col-sm-2">Disponible</dt>
        <dd class="col-sm-10">@Model.Disponible ? "Sí" : "No"</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</p>

